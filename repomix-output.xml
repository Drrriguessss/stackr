      </div>
      
      {/* Contenu scrollable */}
      <div className="bg-white">
        <div className="container mx-auto px-4 sm:px-6 py-6 sm:py-8">
          {/* Sections horizontales scrollables */}
          <div className="space-y-6 sm:space-y-8">
            {sections.map((section, index) => (
              <ContentSection
